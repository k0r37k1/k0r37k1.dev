---
import BaseLayout from './BaseLayout.astro';

interface Props {
	title?: string;
	description?: string;
	ogImage?: string;
	noindex?: boolean;
	minimal?: boolean;
}

const { minimal = false, ...baseProps } = Astro.props;
---

<BaseLayout {...baseProps}>
	<!-- Landing Page optimized structure -->
	<div class="landing-page">
		<slot />
	</div>
</BaseLayout>

<style>
	.landing-page {
		/* Landing Page specific styles */

		/* Optimized for conversion with clear visual hierarchy */
	}

	/* Remove default spacing on direct children for full control */
	.landing-page > :global(section:first-child) {
		padding-top: 0;
	}

	/* Smooth transitions between sections */
	.landing-page > :global(section) {
		transition: opacity 0.3s ease;
	}
</style>
