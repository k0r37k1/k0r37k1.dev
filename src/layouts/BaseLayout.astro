---
import '../styles/style.css';
import type { Language } from '@/i18n';

// Local fonts (GDPR-compliant, no Google Fonts API calls)
// Only load critical weights: Regular (400) + Bold (700)
// This reduces font CSS from ~32KB to ~16KB
import '@fontsource/vt323';
import '@fontsource/ibm-plex-mono/400.css';
import '@fontsource/ibm-plex-mono/700.css';

interface Props {
	lang?: Language;
	title: string;
	description: string;
	currentPath?: string;
}

const { lang = 'de', title, description, currentPath = '/' } = Astro.props;

// Base URL for hreflang alternates
const baseUrl = 'https://k0r37k1.dev';

// Generate alternate URLs
const alternateUrl = lang === 'de' ? `${baseUrl}/en${currentPath}` : `${baseUrl}${currentPath}`;
const canonicalUrl = lang === 'de' ? `${baseUrl}${currentPath}` : `${baseUrl}/en${currentPath}`;
---

<!doctype html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="description" content={description} />
		<meta name="theme-color" content="#14161c" />

		<!-- Content Security Policy (CSP) via Meta Tag -->
		<!-- Note: Some CSP directives don't work in meta tags (e.g., frame-ancestors) -->
		<!-- For full CSP support, configure NGINX headers -->
		<meta
			http-equiv="Content-Security-Policy"
			content="default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self' https://api.iconify.design; base-uri 'self'; form-action 'self'; upgrade-insecure-requests"
		/>

		<title>{title}</title>

		<!-- DNS Prefetch for external resources (Iconify API) -->
		<link rel="dns-prefetch" href="https://api.iconify.design" />
		<link rel="preconnect" href="https://api.iconify.design" crossorigin />

		<!-- Canonical URL -->
		<link rel="canonical" href={canonicalUrl} />

		<!-- Language alternates for SEO -->
		<link rel="alternate" hreflang="de" href={lang === 'de' ? canonicalUrl : alternateUrl} />
		<link rel="alternate" hreflang="en" href={lang === 'en' ? canonicalUrl : alternateUrl} />
		<link rel="alternate" hreflang="x-default" href={baseUrl + currentPath} />

		<!-- Open Graph Tags (Facebook, LinkedIn, Discord, WhatsApp) -->
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={`${baseUrl}/og-image.png`} />
		<meta property="og:url" content={canonicalUrl} />
		<meta property="og:type" content="website" />
		<meta property="og:locale" content={lang === 'de' ? 'de_DE' : 'en_US'} />
		<meta property="og:site_name" content="k0r37k1.dev" />

		<!-- Twitter Card Tags (X/Twitter) -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:site" content="@k0r37k1" />
		<meta name="twitter:creator" content="@k0r37k1" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
		<meta name="twitter:image" content={`${baseUrl}/og-image.png`} />

		<!-- Favicons -->
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />

		<!-- Progressive Enhancement: Show content when JS is blocked -->
		<!-- Following Motion library best practice: https://github.com/motiondivision/motion/discussions/1792 -->
		<noscript>
			<style>
				/* Motion library recommended approach: target .motion class */
				.motion {
					opacity: 1 !important;
					transform: none !important;
				}

				/* Hide JS-dependent decorative elements */
				.typewriter,
				.ascii-art,
				.terminal-cursor {
					display: none !important;
				}

				/* Show noscript fallback content */
				.noscript-fallback {
					display: block !important;
				}
			</style>
		</noscript>
	</head>
	<body>
		<slot />
	</body>
</html>
