---
import BaseLayout from '@layouts/BaseLayout.astro';
import TerminalHeader from '@components/terminal/TerminalHeader.vue';
import TerminalFooter from '@components/terminal/TerminalFooter.vue';
import GoToTop from '@components/ui/GoToTop.vue';
import type { Language } from '@/i18n';

interface Props {
	lang?: Language;
	title: string;
	description: string;
	currentPath?: string;
}

const { lang = 'de', title, description, currentPath = '/' } = Astro.props;
---

<BaseLayout lang={lang} title={title} description={description} currentPath={currentPath}>
	<div class="terminal-window">
		<!-- Terminal Header -->
		<TerminalHeader client:load lang={lang} currentPath={currentPath} />

		<!-- Terminal Content (Scrollable) - includes sections and footer via slot -->
		<main class="terminal-content">
			<slot />
		</main>

		<!-- Go to Top Button (outside scrollable content) -->
		<GoToTop client:idle />
	</div>
</BaseLayout>
