---
import BaseLayout from '@layouts/BaseLayout.astro';
import TerminalHeader from '@components/terminal/TerminalHeader.vue';
import TerminalFooter from '@components/terminal/TerminalFooter.vue';
import type { Language } from '@/i18n';

interface Props {
	lang?: Language;
	title: string;
	description: string;
	currentPath?: string;
	terminalTitle: string;
}

const { lang = 'de', title, description, currentPath = '/', terminalTitle } = Astro.props;
---

<BaseLayout lang={lang} title={title} description={description} currentPath={currentPath}>
	<div class="legal-page">
		<div class="terminal-window">
			<!-- Terminal Header with Custom Title -->
			<TerminalHeader client:idle lang={lang} currentPath={currentPath} customTitle={terminalTitle} />

			<!-- Terminal Content -->
			<main class="terminal-content">
				<!-- Main Section with Corners -->
				<section class="terminal-section section-with-corners">
					<slot name="title" />
					<div class="ascii-decorations" aria-hidden="true">
						<span class="corner top-left">┌───────────</span>
						<span class="corner top-right">───────────┐</span>
						<span class="corner bottom-left">└───────────</span>
						<span class="corner bottom-right">───────────┘</span>
					</div>

					<div class="legal-content">
						<slot />
					</div>
				</section>

				<!-- Navigation -->
				<slot name="navigation" />
			</main>

			<!-- Footer -->
			<TerminalFooter client:idle lang={lang} />
		</div>
	</div>
</BaseLayout>
