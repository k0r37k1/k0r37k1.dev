---
import TerminalLayout from '@layouts/TerminalLayout.astro';
import { getTranslations } from '@/i18n';
import { getBlogPosts } from '@utils/blog';

const t = getTranslations('de');
const sortedPosts = await getBlogPosts('de');

const pageTitle = `${t.blog.title} | k0r37k1.dev`;
const pageDescription = t.blog.description;
---

<TerminalLayout
	lang="de"
	title={pageTitle}
	description={pageDescription}
	currentPath="/blog"
	customTitle="visitor@k0r37k1.dev:~/blog$ ls -la"
	isBlog={true}
>
	<section class="terminal-section section-with-corners" aria-label={t.aria.sections.blog}>
		<div class="section-title-center" aria-hidden="true">
			<span class="title-desktop">{t.sections.blog}</span>
			<span class="title-mobile">BLOG</span>
		</div>
		<div class="ascii-decorations" aria-hidden="true">
			<span class="corner top-left">┌───────────</span>
			<span class="corner top-right">───────────┐</span>
			<span class="corner bottom-left">└───────────</span>
			<span class="corner bottom-right">───────────┘</span>
		</div>

		<div class="blog-container">
			<div class="blog-header">
				<p class="blog-description">{t.blog.description}</p>
			</div>

			{
				sortedPosts.length === 0 ? (
					<p class="no-posts">{t.blog.noPosts}</p>
				) : (
					<ul class="blog-list">
						{sortedPosts.map((post) => (
							<li class="blog-item">
								<article>
									<h2>
										<a href={`/blog/${post.slug}`}>{post.data.title}</a>
									</h2>
									<time datetime={post.data.pubDate.toISOString()}>
										{post.data.pubDate.toLocaleDateString('de-DE', {
											year: 'numeric',
											month: 'long',
											day: 'numeric',
										})}
									</time>
									<p class="post-description">{post.data.description}</p>
									{post.data.tags && post.data.tags.length > 0 && (
										<div class="post-tags">
											{post.data.tags.map((tag) => (
												<span class="tag">{tag}</span>
											))}
										</div>
									)}
									<a href={`/blog/${post.slug}`} class="terminal-btn">
										{t.blog.readMore}
									</a>
								</article>
							</li>
						))}
					</ul>
				)
			}
		</div>
	</section>
</TerminalLayout>

<style>
	.blog-container {
		max-width: 800px;
		margin: 0 auto;
		padding: 2rem 1rem;
	}

	.blog-header {
		margin-bottom: 3rem;
		text-align: center;
	}

	.blog-description {
		font-size: 1.125rem;
		color: oklch(85% 0.22 125deg);
		font-weight: 600;
		letter-spacing: 0.05em;
	}

	.blog-list {
		list-style: none;
		padding: 0;
		display: flex;
		flex-direction: column;
		gap: 0;
	}

	.blog-item {
		padding: 1.5rem 0;
		border-bottom: 1px solid var(--color-terminal-border);
	}

	.blog-item:first-child {
		padding-top: 0;
	}

	.blog-item h2 {
		font-size: 1.75rem;
		margin-bottom: 0.5rem;
	}

	.blog-item h2 a {
		color: var(--color-link);
		text-decoration: none;
		transition: all 0.2s;
	}

	.blog-item h2 a:hover {
		color: var(--color-accent-orange);
	}

	.blog-item h2 a:hover::before {
		content: '[ ';
		color: var(--color-terminal-primary);
	}

	.blog-item h2 a:hover::after {
		content: ' ]';
		color: var(--color-terminal-primary);
	}

	.blog-item time {
		display: block;
		font-size: 0.875rem;
		color: var(--color-accent-purple);
		margin-bottom: 1rem;
		font-weight: 500;
	}

	.post-description {
		margin-bottom: 1rem;
		line-height: 1.6;
	}

	.post-tags {
		display: flex;
		flex-wrap: wrap;
		gap: 0.5rem;
		margin-bottom: 1rem;
	}

	.tag {
		display: inline-block;
		color: var(--color-terminal-text-dim);
		padding: 0.125rem 0.5rem;
		font-size: 0.75rem;
		font-weight: 500;
		background: rgb(255 255 255 / 5%);
	}

	.no-posts {
		text-align: center;
		padding: 3rem;
		color: var(--color-text-secondary, #888);
		font-style: italic;
	}

	@media (width <= 768px) {
		.blog-container {
			padding: 1rem 0.5rem;
		}

		.blog-item h2 {
			font-size: 1.35rem;
		}
	}
</style>
