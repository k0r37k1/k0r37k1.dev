---
import TerminalLayout from '@layouts/TerminalLayout.astro';
import LegalSection from '@components/sections/LegalSection.vue';
import { getTranslations } from '@/i18n';

const t = getTranslations('de');

const pageTitle = 'Datenschutz | k0r37k1.dev';
const pageDescription = 'Datenschutzerklärung und Informationen zum Datenschutz';
const customTitle = 'visitor@k0r37k1.dev:~$ cat datenschutz.txt';
---

<TerminalLayout
	lang="de"
	title={pageTitle}
	description={pageDescription}
	currentPath="/privacy"
	customTitle={customTitle}
	showGoToTop={false}
>
	<!-- Main Section with Corners -->
	<LegalSection client:visible>
		<h1 class="section-title-center">
			<span class="title-desktop">{t.legal.privacy.title}</span>
			<span class="title-mobile">DATENSCHUTZ</span>
		</h1>
		<div class="ascii-decorations" aria-hidden="true">
			<span class="corner top-left">┌───────────</span>
			<span class="corner top-right">───────────┐</span>
			<span class="corner bottom-left">└───────────</span>
			<span class="corner bottom-right">───────────┘</span>
		</div>

		<div class="legal-content">
			<!-- Last Updated -->
			<p class="last-updated">{t.legal.privacy.lastUpdated}</p>

			<!-- 1. Verantwortlicher -->
			<div class="nfo-block">
				<div class="nfo-label">{t.legal.privacy.responsible}</div>
				<div class="nfo-text">
					{t.legal.privacy.responsibleText}<br /><br />
					{t.legal.privacy.responsibleName}<br />
					{t.legal.privacy.responsibleAddress}<br />
					{t.legal.privacy.responsibleEmail}
				</div>
			</div>

			<!-- 2. Überblick -->
			<div class="nfo-block">
				<div class="nfo-label">{t.legal.privacy.overview}</div>
				<div class="nfo-text">
					{t.legal.privacy.overviewText}
				</div>
			</div>

			<!-- 3. Hosting -->
			<div class="nfo-block">
				<div class="nfo-label">{t.legal.privacy.hosting}</div>
				<div class="nfo-text">
					<div class="sub-label">{t.legal.privacy.hostingProvider}</div>
					{t.legal.privacy.hostingProviderText}
				</div>
				<div class="nfo-text">
					<div class="sub-label">{t.legal.privacy.hostingData}</div>
					{t.legal.privacy.hostingDataText}
				</div>
				<div class="nfo-text">
					<div class="sub-label">{t.legal.privacy.hostingLegal}</div>
					{t.legal.privacy.hostingLegalText}
				</div>
			</div>

			<!-- 4. SSL/TLS -->
			<div class="nfo-block">
				<div class="nfo-label">{t.legal.privacy.ssl}</div>
				<div class="nfo-text">
					{t.legal.privacy.sslText}
				</div>
			</div>

			<!-- 5. Cookies -->
			<div class="nfo-block">
				<div class="nfo-label">{t.legal.privacy.cookies}</div>
				<div class="nfo-text">
					<div class="sub-label">{t.legal.privacy.cookiesWhat}</div>
					{t.legal.privacy.cookiesWhatText}
				</div>
				<div class="nfo-text">
					<div class="sub-label">{t.legal.privacy.cookiesUsed}</div>
					{t.legal.privacy.cookiesUsedText}
				</div>
				<div class="nfo-text">
					<div class="sub-label">{t.legal.privacy.cookiesControl}</div>
					{t.legal.privacy.cookiesControlText}
				</div>
			</div>

			<!-- 6. Externe Dienste -->
			<div class="nfo-block">
				<div class="nfo-label">{t.legal.privacy.externalServices}</div>
				<div class="nfo-text">
					<div class="sub-label">{t.legal.privacy.iconify}</div>
					{t.legal.privacy.iconifyText}<br /><br />
					{t.legal.privacy.iconifyProvider}<br />
					<a
						href="https://iconify.design/privacy/"
						class="terminal-link"
						target="_blank"
						rel="noopener noreferrer">{t.legal.privacy.iconifyPrivacy}</a
					><br /><br />
					{t.legal.privacy.iconifyLegal}
				</div>
			</div>

			<!-- 7. Externe Links -->
			<div class="nfo-block">
				<div class="nfo-label">{t.legal.privacy.externalLinks}</div>
				<div class="nfo-text">
					{t.legal.privacy.externalLinksText}
				</div>
			</div>

			<!-- 8. Ihre Rechte -->
			<div class="nfo-block">
				<div class="nfo-label">{t.legal.privacy.rights}</div>
				<div class="nfo-text">
					<div class="sub-label">{t.legal.privacy.rightsIntro}</div>
					{t.legal.privacy.rightsInfo}<br />
					{t.legal.privacy.rightsCorrection}<br />
					{t.legal.privacy.rightsDeletion}<br />
					{t.legal.privacy.rightsRestriction}<br />
					{t.legal.privacy.rightsPortability}<br />
					{t.legal.privacy.rightsObject}<br />
					{t.legal.privacy.rightsComplaint}<br /><br />
					{t.legal.privacy.rightsAuthority}
				</div>
			</div>

			<!-- 9. Kontakt -->
			<div class="nfo-block">
				<div class="nfo-label">{t.legal.privacy.contact}</div>
				<div class="nfo-text">
					{t.legal.privacy.contactText}<br />
					E-Mail: <a href="mailto:contact@k0r37k1.dev" class="terminal-link">contact@k0r37k1.dev</a>
				</div>
			</div>
		</div>
	</LegalSection>

	<!-- Navigation -->
	<nav class="legal-nav" aria-label={t.aria.navigation.legal}>
		<a href="/" class="terminal-link nav-link">{t.legal.nav.backToPortfolio}</a>
		<span class="nav-separator" aria-hidden="true">•</span>
		<a href="/imprint" class="terminal-link nav-link">{t.legal.nav.toImprint}</a>
	</nav>
</TerminalLayout>
