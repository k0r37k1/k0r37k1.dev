---
import { getCollection, type CollectionEntry } from 'astro:content';
import TerminalLayout from '@layouts/TerminalLayout.astro';
import { getTranslations } from '@/i18n';

const t = getTranslations('en');

export async function getStaticPaths() {
	const posts = await getCollection('blog');
	return posts.map((post) => ({
		params: { slug: post.slug },
		props: post,
	}));
}

type Props = CollectionEntry<'blog'>;

const post = Astro.props;
const { Content } = await post.render();

const pageTitle = `${post.data.title} | Blog | k0r37k1.dev`;
const pageDescription = post.data.description;
---

<TerminalLayout
	lang="en"
	title={pageTitle}
	description={pageDescription}
	currentPath={`/en/blog/${post.slug}`}
	isBlog={true}
>
	<article class="blog-post">
		<div class="post-header">
			<a href="/en/blog" class="back-link">{t.blog.backToBlog}</a>
			<h1>{post.data.title}</h1>
			<div class="post-meta">
				<time datetime={post.data.pubDate.toISOString()}>
					{t.blog.publishedOn}
					{
						post.data.pubDate.toLocaleDateString('en-US', {
							year: 'numeric',
							month: 'long',
							day: 'numeric',
						})
					}
				</time>
				{
					post.data.updatedDate && (
						<time datetime={post.data.updatedDate.toISOString()}>
							{t.blog.updatedOn}{' '}
							{post.data.updatedDate.toLocaleDateString('en-US', {
								year: 'numeric',
								month: 'long',
								day: 'numeric',
							})}
						</time>
					)
				}
			</div>
			{
				post.data.tags && post.data.tags.length > 0 && (
					<div class="post-tags">
						{post.data.tags.map((tag) => (
							<span class="tag">{tag}</span>
						))}
					</div>
				)
			}
		</div>

		<div class="post-content">
			<Content />
		</div>

		<div class="post-footer">
			<a href="/en/blog" class="back-link">{t.blog.backToBlog}</a>
		</div>
	</article>
</TerminalLayout>

<style>
	.blog-post {
		max-width: 800px;
		margin: 0 auto;
		padding: 2rem 1rem;
	}

	.post-header {
		margin-bottom: 3rem;
		padding-bottom: 2rem;
		border-bottom: 1px solid var(--color-terminal-border);
	}

	.back-link {
		display: inline-block;
		color: var(--color-link);
		text-decoration: none;
		border-bottom: 2px solid transparent;
		transition: all 0.2s;
		margin-bottom: 1.5rem;
		font-size: 0.875rem;
	}

	.back-link:hover {
		color: var(--color-accent-orange);
		border-bottom-color: var(--color-accent-orange);
	}

	.back-link:hover::before {
		content: '[ ';
		color: var(--color-terminal-primary);
	}

	.back-link:hover::after {
		content: ' ]';
		color: var(--color-terminal-primary);
	}

	.post-header h1 {
		font-size: 2.5rem;
		font-weight: 700;
		margin-bottom: 1rem;
		color: var(--color-link);
		line-height: 1.2;
	}

	.post-meta {
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
		font-size: 0.875rem;
		color: var(--color-text-secondary, #888);
		margin-bottom: 1rem;
	}

	.post-tags {
		display: flex;
		flex-wrap: wrap;
		gap: 0.5rem;
		margin-top: 1rem;
	}

	.tag {
		display: inline-block;
		background: transparent;
		color: var(--color-terminal-text-dim);
		padding: 0.25rem 0.625rem;
		border-radius: 0.25rem;
		font-size: 0.75rem;
		font-weight: 500;
		border: 1px solid var(--color-terminal-border);
	}

	.post-content {
		margin-bottom: 3rem;
		line-height: 1.8;
	}

	.post-content :global(h2) {
		font-size: 1.875rem;
		font-weight: 600;
		margin-top: 2.5rem;
		margin-bottom: 1rem;
		color: var(--color-link);
	}

	.post-content :global(h3) {
		font-size: 1.5rem;
		font-weight: 600;
		margin-top: 2rem;
		margin-bottom: 0.75rem;
		color: var(--color-link);
	}

	.post-content :global(p) {
		margin-bottom: 1.5rem;
	}

	.post-content :global(a) {
		color: var(--color-link);
		text-decoration: none;
		border-bottom: 2px solid transparent;
		transition: all 0.2s;
	}

	.post-content :global(a:hover) {
		color: var(--color-accent-orange);
		border-bottom-color: var(--color-accent-orange);
	}

	.post-content :global(ul),
	.post-content :global(ol) {
		margin-bottom: 1.5rem;
		padding-left: 2rem;
	}

	.post-content :global(li) {
		margin-bottom: 0.5rem;
	}

	.post-content :global(code) {
		background: rgb(0 255 0 / 10%);
		padding: 0.125rem 0.375rem;
		border-radius: 4px;
		font-family: monospace;
		font-size: 0.875em;
	}

	.post-content :global(pre) {
		background: rgb(0 0 0 / 30%);
		border: 1px solid var(--color-terminal-border);
		border-radius: 4px;
		padding: 1rem;
		overflow-x: auto;
		margin-bottom: 1.5rem;
	}

	.post-content :global(pre code) {
		background: none;
		padding: 0;
	}

	.post-content :global(blockquote) {
		border-left: 4px solid var(--color-link);
		padding-left: 1.5rem;
		margin: 1.5rem 0;
		font-style: italic;
		color: var(--color-text-secondary, #888);
	}

	.post-content :global(img) {
		max-width: 100%;
		height: auto;
		border-radius: 4px;
		margin: 1.5rem 0;
	}

	.post-footer {
		padding-top: 2rem;
		border-top: 1px solid var(--color-terminal-border);
	}

	@media (width <= 768px) {
		.post-header h1 {
			font-size: 2rem;
		}

		.post-content :global(h2) {
			font-size: 1.5rem;
		}

		.post-content :global(h3) {
			font-size: 1.25rem;
		}
	}
</style>
