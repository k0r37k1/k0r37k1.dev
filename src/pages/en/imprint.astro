---
import TerminalLayout from '@layouts/TerminalLayout.astro';
import LegalSection from '@components/sections/LegalSection.vue';
import { getTranslations } from '@/i18n';

const t = getTranslations('en');

const pageTitle = 'Imprint | k0r37k1.dev';
const pageDescription = 'Legal information and contact details';
const customTitle = 'visitor@k0r37k1.dev:~$ cat imprint.txt';
---

<TerminalLayout
	lang="en"
	title={pageTitle}
	description={pageDescription}
	currentPath="/imprint"
	customTitle={customTitle}
	showGoToTop={false}
>
	<!-- Main Section with Corners -->
	<LegalSection client:visible>
		<h1 class="section-title-center">
			<span class="title-desktop">{t.legal.imprint.title}</span>
			<span class="title-mobile">IMPRINT</span>
		</h1>
		<div class="ascii-decorations" aria-hidden="true">
			<span class="corner top-left">┌───────────</span>
			<span class="corner top-right">───────────┐</span>
			<span class="corner bottom-left">└───────────</span>
			<span class="corner bottom-right">───────────┘</span>
		</div>

		<div class="legal-content">
			<!-- Legal Content -->
			<!-- Angaben gemäß § 5 TMG -->
			<div class="nfo-block">
				<div class="nfo-label">{t.legal.imprint.tmg}</div>
				<div class="nfo-text">
					Alex Korezki<br />
					c/o Postflex #10164<br />
					Emsdettener Str. 10<br />
					48268 Greven, Germany
				</div>
				<div class="nfo-text nfo-note">
					<em>No packages or parcels – delivery will be refused!</em>
				</div>
			</div>

			<!-- Kontakt -->
			<div class="nfo-block">
				<div class="nfo-label">{t.legal.imprint.contact}</div>
				<div class="nfo-text">
					{t.contact.email}: <a href="mailto:contact@k0r37k1.dev" class="terminal-link"
						>contact@k0r37k1.dev</a
					>
				</div>
			</div>

			<!-- Verantwortlich für den Inhalt -->
			<div class="nfo-block">
				<div class="nfo-label">{t.legal.imprint.responsible}</div>
				<div class="nfo-text">
					Alex Korezki<br />
					c/o Postflex #10164<br />
					Emsdettener Str. 10<br />
					48268 Greven, Germany
				</div>
			</div>

			<!-- VAT -->
			<div class="nfo-block">
				<div class="nfo-label">{t.legal.imprint.vat}</div>
				<div class="nfo-text">
					{t.legal.imprint.vatText}
				</div>
			</div>

			<!-- Haftungsausschluss -->
			<div class="nfo-block">
				<div class="nfo-label">{t.legal.imprint.liability}</div>
				<div class="nfo-text">
					<div class="sub-label">{t.legal.imprint.liabilityContent}</div>
					{t.legal.imprint.liabilityContentText}
				</div>
				<div class="nfo-text">
					<div class="sub-label">{t.legal.imprint.liabilityLinks}</div>
					{t.legal.imprint.liabilityLinksText}
				</div>
			</div>
		</div>
	</LegalSection>

	<!-- Navigation -->
	<nav class="legal-nav" aria-label={t.aria.navigation.legal}>
		<a href="/en/" class="terminal-link nav-link">{t.legal.nav.backToPortfolio}</a>
		<span class="nav-separator" aria-hidden="true">•</span>
		<a href="/en/privacy" class="terminal-link nav-link">{t.legal.nav.toPrivacy}</a>
	</nav>
</TerminalLayout>
