---
import LegalLayout from '@layouts/LegalLayout.astro';
import { getTranslations } from '@/i18n';

const t = getTranslations('en');

const pageTitle = 'Imprint | k0r37k1.dev';
const pageDescription = 'Legal information and contact details';
const terminalTitle = 'visitor@k0r37k1.dev:~$ cat imprint.txt';
---

<LegalLayout
	lang="en"
	title={pageTitle}
	description={pageDescription}
	currentPath="/imprint"
	terminalTitle={terminalTitle}
>
	<!-- Section Title -->
	<div slot="title" class="section-title-center" aria-hidden="true">{t.legal.imprint.title}</div>

	<!-- Legal Content -->
	<!-- Angaben gemäß § 5 TMG -->
	<div class="nfo-block">
		<div class="nfo-label">{t.legal.imprint.tmg}</div>
		<div class="nfo-text">
			[Your Name]<br />
			[Your Street]<br />
			[ZIP City]
		</div>
	</div>

	<!-- Kontakt -->
	<div class="nfo-block">
		<div class="nfo-label">{t.legal.imprint.contact}</div>
		<div class="nfo-text">
			{t.contact.email}: <a href="mailto:hello@k0r37k1.dev" class="terminal-link">hello@k0r37k1.dev</a>
		</div>
	</div>

	<!-- Verantwortlich für den Inhalt -->
	<div class="nfo-block">
		<div class="nfo-label">{t.legal.imprint.responsible}</div>
		<div class="nfo-text">
			[Your Name]<br />
			[Your Address]
		</div>
	</div>

	<!-- Haftungsausschluss -->
	<div class="nfo-block">
		<div class="nfo-label">{t.legal.imprint.liability}</div>
		<div class="nfo-text">
			<div class="sub-label">{t.legal.imprint.liabilityContent}</div>
			{t.legal.imprint.liabilityContentText}
		</div>
		<div class="nfo-text">
			<div class="sub-label">{t.legal.imprint.liabilityLinks}</div>
			{t.legal.imprint.liabilityLinksText}
		</div>
	</div>

	<!-- Navigation -->
	<nav class="legal-nav" slot="navigation" aria-label="Legal pages navigation">
		<a href="/en/" class="terminal-link nav-link">{t.legal.nav.backToPortfolio}</a>
		<span class="nav-separator" aria-hidden="true">•</span>
		<a href="/en/privacy" class="terminal-link nav-link">{t.legal.nav.toPrivacy}</a>
	</nav>
</LegalLayout>
