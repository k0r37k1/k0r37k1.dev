---
import LegalLayout from '@layouts/LegalLayout.astro';
import { getTranslations } from '@/i18n';

const t = getTranslations('en');

const pageTitle = 'Privacy | k0r37k1.dev';
const pageDescription = 'Privacy policy and data protection information';
const terminalTitle = 'visitor@k0r37k1.dev:~$ cat privacy.txt';
---

<LegalLayout
	lang="en"
	title={pageTitle}
	description={pageDescription}
	currentPath="/privacy"
	terminalTitle={terminalTitle}
>
	<!-- Section Title -->
	<h1 slot="title" class="section-title-center">{t.legal.privacy.title}</h1>

	<!-- Legal Content -->
	<!-- Overview -->
	<div class="nfo-block">
		<div class="nfo-label">{t.legal.privacy.overview}</div>
		<div class="nfo-text">
			{t.legal.privacy.overviewText}
		</div>
	</div>

	<!-- Data Collection -->
	<div class="nfo-block">
		<div class="nfo-label">{t.legal.privacy.dataCollection}</div>
		<div class="nfo-text">
			<div class="sub-label">{t.legal.privacy.whoResponsible}</div>
			{t.legal.privacy.whoResponsibleText}
		</div>
		<div class="nfo-text">
			<div class="sub-label">{t.legal.privacy.howCollect}</div>
			{t.legal.privacy.howCollectText}
			<br /><br />
			{t.legal.privacy.howCollectText2}
		</div>
	</div>

	<!-- Hosting -->
	<div class="nfo-block">
		<div class="nfo-label">{t.legal.privacy.hosting}</div>
		<div class="nfo-text">
			{t.legal.privacy.hostingText}
		</div>
	</div>

	<!-- Cookies -->
	<div class="nfo-block">
		<div class="nfo-label">{t.legal.privacy.cookies}</div>
		<div class="nfo-text">
			{t.legal.privacy.cookiesText}
		</div>
	</div>

	<!-- Your Rights -->
	<div class="nfo-block">
		<div class="nfo-label">{t.legal.privacy.rights}</div>
		<div class="nfo-text">
			<div class="sub-label">{t.legal.privacy.rightsIntro}</div>
			{t.legal.privacy.rightsInfo}<br />
			{t.legal.privacy.rightsCorrection}<br />
			{t.legal.privacy.rightsDeletion}<br />
			{t.legal.privacy.rightsRestriction}<br />
			{t.legal.privacy.rightsPortability}<br />
			{t.legal.privacy.rightsObject}
		</div>
	</div>

	<!-- Contact -->
	<div class="nfo-block">
		<div class="nfo-label">{t.legal.privacy.contact}</div>
		<div class="nfo-text">
			{t.legal.privacy.contactText}<br />
			E-Mail: <a href="mailto:hello@k0r37k1.dev" class="terminal-link">hello@k0r37k1.dev</a>
		</div>
	</div>

	<!-- Navigation -->
	<nav class="legal-nav" slot="navigation" aria-label={t.aria.navigation.legal}>
		<a href="/en/" class="terminal-link nav-link">{t.legal.nav.backToPortfolio}</a>
		<span class="nav-separator" aria-hidden="true">â€¢</span>
		<a href="/en/imprint" class="terminal-link nav-link">{t.legal.nav.toImprint}</a>
	</nav>
</LegalLayout>
